packages:
  yum:
    postgresql94-devel: []
    gcc: []
 
commands:
  01-install-node:
    command: "sudo yum install nodejs npm --enablerepo=epel -y"

container_commands:
  01_migrateall:
    command: "python manage.py migrate"
    leader_only: true

  02-install-dependencies:
    command: "sudo npm install -g bower gulp"

  03_cd:
    command: "cd mendel/angular/"

  04_gulp_clean:
    command: "sudo gulp clean"

  05_gulp_django:
    command: "sudo gulp django"

  06_cd_back:
    command: "cd ../../"
  
  07_collectstatic:
    command: "python manage.py collectstatic --noinput"